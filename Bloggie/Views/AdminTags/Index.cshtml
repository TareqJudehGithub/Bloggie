@model IEnumerable<ReadOnlyTagRequestVM>

    <div class="bg-secondary bg-opacity-10 py-2">
        <div class="container">
            <h1>Show all Tags - Admin Functionality</h1>
        </div>
    </div>

    <div class="container py-5">
        @if (Model != null && Model.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                        <th>Display Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tag in Model)
                {
                        <tr>
                            <td>@tag.Id</td>
                            <td>@tag.Name</td>
                            <td>@tag.DisplayName</td>
                            <td>
                                <a 
                                        class="btn btn-warning" 
                                        asp-controller="adminTags"
                                        asp-action="Edit"
                                        asp-route-id="@tag.Id"
                                   >Edit
                                </a>
                                <a class="btn btn-danger"
                                        asp-controller="adminTags"
                                        asp-action="Delete"
                                        asp-route-id="@tag.Id"
                                   >Delete</a>
                            </td>
                        </tr>
                }
                    </tbody>
                </table>
            }
        else
            {
                <p>No tags found!</p>
            }
    </div>

