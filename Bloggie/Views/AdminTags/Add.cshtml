@model AddTagRequestVM

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Tag - Admin Functionality</h1>
    </div>
</div>

    <div class="container py-5" >
        <form method="post">
            <div class="mb-3">
                <label class="form-label" asp-for="Name">Name</label>
                <input class="form-control" type="text"  asp-for="Name" />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="DisplayName">DisplayName</label>
                <input class="form-control" type="text" asp-for="DisplayName" />
            </div>

            <div class="mb-3">
                
                <button class="btn btn-dark" type="submit">Submit</button>
            </div>
        </form>
    </div>