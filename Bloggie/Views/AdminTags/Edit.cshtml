@model EditTagRequestVM

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Tag - Admin Functionality</h1>
    </div>
</div>

    <div class="container py-5">
        @if (Model != null)
            {
        <form method="post">
            <div class="form-group mb-3">
                <label class="form-label" asp-for="Name">Name</label>
                <input class="form-control" type="text" asp-for="Name" />
            </div>

            <div class="form-group mb-3">
                <label class="form-label" asp-for="DisplayName">DisplayName</label>
                <input class="form-control" type="text" asp-for="DisplayName" />
            </div>
            <div class="form-group mb-3">
                <button class="btn btn-primary" type="submit">Submit</button>
                <a class="btn btn-info" asp-controller="AdminTags" asp-action="Index">Cancel</a>
            </div>
        </form>
            }
        else
            {
                <h4>Tag not found</h4>
            }
    </div>