@model UsersListVM

<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>Users - Admin functionality</h1>
    </div>
</div>

<div class="container">

    <div class="mb-3 d-flex justify-content-end">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#modalCreateUser">
            New user
        </button>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id </th>
                <th>Username</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in @Model.Users)
            {
                <tr>
                    <td>@Html.DisplayFor(viewModel => item.Id)</td>
                    <td>@Html.DisplayFor(viewModel => item.Username)</td>
                    <td>@Html.DisplayFor(viewModel => item.Email)</td>

                    <td>
                        <a class="link-secondary"
                           asp-controller="AdminUsers"
                           asp-action="Update"
                           asp-route-id="@item.Id">Edit</a>
                        <a class="link-danger"
                           asp-controller="AdminUsers"
                           asp-action="Delete"
                           asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<!-- Modal -->
<form method="post">
    <div class="modal fade" id="modalCreateUser" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Create New User</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Username</label>
                        <input asp-for="Username"
                               class="form-control" type="text"
                               placeholder="Enter a username" required autofocus />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input asp-for="Email"
                               class="form-control" type="email"
                               placeholder="example@email.com" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input asp-for="Password"
                               class="form-control" type="password"
                               placeholder="Enter a password" required />
                    </div>

                    <div class="mb-3">
                        <!--User Role-->
                        <div class="form-check">
                            <input asp-for="IsUser"
                                   class="form-check-input" id="chkUserRole"
                                   type="checkbox" />
                            <label class="form-check-label" asp-for="IsUser">User Role</label>
                        </div>
                        @{
                            if (User.IsInRole("SuperAdmin"))
                            {
                                <div class="form-check">
                                    <input asp-for="IsAdmin"
                                           class="form-check-input" id="IsAdmin"
                                           type="checkbox" />
                                    <label class="form-check-label" asp-for="IsAdmin">Admin Role</label>
                                </div>
                            }
                            else
                            {
                                <div class="form-check">
                                    <input asp-for="IsAdmin"
                                           class="form-check-input" id="IsAdmin"
                                           type="checkbox" disabled />
                                    <label class="form-check-label" asp-for="IsAdmin">Admin Role</label>
                                </div>
                            }
                        }
                        <!--Admin Role-->
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-dark">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>