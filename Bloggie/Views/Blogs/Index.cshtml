@model ReadOnlyBlogPostDetailsVM

@{
    ViewData["Title"] = Model.PageTitle;
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">

            @if (Model != null)
            {
                <h1>@Html.DisplayFor(modelItem => Model.Heading)</h1>

                <div class="d-flex justify-content-between mb-3">
                    <span class="text-secondary">@Html.DisplayFor(modelItem => Model.Author)</span>
                    <span class="text-secondary">@Model.PublishedDate.ToShortDateString()</span>
                </div>

                <div class="mb-3">
                    @if (signInManager.IsSignedIn(User))
                    {
                        // If that user has already liked a blog post
                        if (Model.blogLiked)
                        {
                            <a role="button">
                                <i class="bi bi-hand-thumbs-up-fill"></i>
                            </a>
                        }
                        else
                        {
                            <a id="btnLike" role="button">
                                <i class="bi bi-hand-thumbs-up"></i>
                            </a>
                        }
                    }
                    <span id="totalLikes">@Model.TotalLikes</span> likes
                </div>

                <div class="d-flex mb-3">
                    @foreach (var tag in @Model.Tags)
                    {
                        <p class="btn btn-secondary rounded-pill p-1 me-1">
                            @Html.DisplayFor(modelItem => tag.Name)
                        </p>
                    }
                </div>
                <img class="img-fluid d-block mb-3"
                     src="@Html.DisplayFor(modelItem => Model.FeaturedImgUrl)"
                     alt="Blog post" />

                <div class="mb-3 blog-details-content">
                    <p>
                        @Html.Raw(Model.Content)
                    </p>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-3">Comments</h5>
                        @*@if (signInManager.IsSignedIn(User))
                            {*@
                        <form method="post">
                            <div class="mb-3">
                                <label class="form-label">Comment Description</label>
                                <input class="form-control" type="text" asp-for="CommentDescription">
                            </div>
                            <div class="mb-3">
                                <button class="btn btn-dark" type="submit">Post</button>
                                <input type="hidden" asp-for="Id" />
                                @*<input type="hidden" asp-for="UrlHandle"/>*@
                            </div>
                        </form>
                        @*}*@
                    </div>
                    <div class="card-body">
                        @if (Model.Comments != null && Model.Comments.Any())
                        {
                            @foreach (var comment in Model.Comments)
                            {
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div>
                                            @comment.Description
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <span class="text-secondary fs-6">@comment.Username</span>
                                            <span class="text-secondary fs-6">@comment.DateAdded.ToShortDateString()</span>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            }

        </div>
    </div>
</div>

@section Scripts {
    <script>
        const btnLikebtnElement = document.getElementById("btnLike");
        const totalLikeElement = document.getElementById("totalLikes");

        async function getTotalLikes() {
            fetch("api/BlogPostLike/@Model.Id/totalLikes", {
                method: "GET",
                headers: {
                    "Content-Type": "Application/Json",
                    "Accept": "*/*"
                }
                // GET methods do no requie a body
            })
                .then(data => data.json())
                .then(result => totalLikeElement.innerHTML = result);
        }

        async function addLikeForBlog() {
            fetch("/api/BlogPostLike/Add", {
                method: "POST",
                headers: {
                    "Content-Type": "Application/JSON",
                    "Accept": "*/*"
                },
                body: JSON.stringify({
                    blogPostId: "@Model.Id",
                    userId: "@userManager.GetUserId(User)"
                })
            })
                // Change the like icon from hollow to filled
                .then(() => {
                    btnLikebtnElement.innerHTML =
                        '<i class="bi bi-hand-thumbs-up-fill"></i>';

                    // Deny the user the ability to use the Like button
                    btnLikebtnElement.removeEventListener("click", addLikeForBlog);
                    // Call GetTotalLikesForBlog action method
                    getTotalLikes();
                });
        }

        btnLikebtnElement.addEventListener("click", addLikeForBlog);
    </script>
}
