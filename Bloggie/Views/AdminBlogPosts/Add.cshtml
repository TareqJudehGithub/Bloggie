@model AddBlogPostRequestVM


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New BlogPost - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    <form class="" method="post">

        <div class="mb-3">
            <label class="form-label" asp-for="Heading">Heading</label>
            <input id="heading" class="form-control" type="text" asp-for="Heading" id="" />
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="PageTitle">Page Title</label>
            <input id="pageTitle" class="form-control" type="text" asp-for="PageTitle" id="" />
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Content">Content</label>
            <textarea id="content" class="form-control" rows="4" asp-for="Content" id="">    
            </textarea>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="ShortDescription">Short Description</label>
            <input id="shortDiscription" class="form-control" type="text" asp-for="ShortDescription" id="" />
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="FeaturedImgUrl">Featured Image URL</label>
            <input id="featuredImgUrl" class="form-control" type="text" asp-for="FeaturedImgUrl" id="" />
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="UrlHandle">URL Handle</label>
            <input id="" class="form-control" type="text" asp-for="UrlHandle" id="" />
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="PublishedDate">Published Date</label>
            <input id="publishedDate" class="form-control" type="date" asp-for="PublishedDate" id="" />
        </div>
        
        <div class="mb-3">
            <label class="form-label" asp-for="Author">Author</label>
            <input id="author" class="form-control" type="text" asp-for="Author" id="" />
        </div>
        
        <div class="form-check mb-3">
            <input id=isVisible" class="form-check-input" type="checkbox" asp-for="isVisible">
            <label class="form-check-label" asp-for="isVisible" id="">
                Is Visible?
            </label>
        </div>

        @*Tag selection - Drop-down List - Single item*@
        @*<div class="mb-3" ">
            <label class="form-label" asp-for="SelectedTag">Tags - Drop-down menu - Single Item</label>
            <select class="form-select"
                    asp-items="@Model.Tags"
                    asp-for="SelectedTag">
                <option selected disabled>Select a Tag</option>
            </select>
        </div>*@


        @*Tag selection - Drop-down List - Multiple items*@
        @*<div class="mb-3" ">
            <label class="form-label" asp-for="SelectedTags">Tags - Drop-down menu - Multiple Items</label>
            <select class="form-select"
                    asp-items="@Model.Tags"
                    asp-for="SelectedTags">
                <option selected disabled>Select a Tag</option>
            </select>
        </div>*@

        @*Tag selection - Checkbox*@
        <div class="mb-3">
            <label class="form-label" asp-for="SelectedTags">Tags - Checkbox</label>
            @foreach (var item in Model.Tags)
            {
                <div class="form-check mb-3">
                    <input class="form-check-input"
                           type="checkbox"
                           name="SelectedTags"
                           value="@item.Value"
                           @(Model.SelectedTags.Contains(item.Value) ? "checked" : "") />
                    <label class="form-check-abel mb-0 ms-1"
                           asp-for="SelectedTags">
                        @item.Text
                    </label>
                </div>
            }
        </div>

        <div class="mb-3">
            <button class="btn btn-dark" type="submit">Save</button>
            <a class="btn btn-secondary" asp-controller="AdminBlogPosts" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>


@section Scripts {
    <script>
        var editor = new FroalaEditor("#content");
    </script>
}



