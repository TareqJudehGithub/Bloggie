@model AddBlogPostRequestVM


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New BlogPost - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    <form class="" method="post">

        <div class="mb-3">
            <label class="form-label" asp-for="Heading">Heading</label>
            <input class="form-control" type="text" asp-for="Heading" id="" />
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="PageTitle">Page Title</label>
            <input class="form-control" type="text" asp-for="PageTitle" id="" />
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Content">Content</label>
            <textarea class="form-control" rows="4" asp-for="Content" id="">    
            </textarea>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="ShortDescription">Short Description</label>
            <input class="form-control" type="text" asp-for="ShortDescription" id="" />
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="FeaturedImgUrl">Featured Image URL</label>
            <input class="form-control" type="text" asp-for="FeaturedImgUrl" id="" />
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="UrlHandle">URL Handle</label>
            <input class="form-control" type="text" asp-for="UrlHandle" id="" />
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="PublishedDate">Published Date</label>
            <input class="form-control" type="date" asp-for="PublishedDate" id="" />
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Author">Author</label>
            <input class="form-control" type="text" asp-for="Author" id="" />
        </div>

        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" asp-for="isVisible">
            <label class="form-check-label" asp-for="isVisible" id="">
                Is Visible?
            </label>
        </div>

        @*Tag selection - Drop-down List*@
        <div class="mb-3" ">
            <label class="form-label"  asp-for="@Model.Tags">Tags - Drop-down menu</label>
            <select class="form-select"
                    asp-items="@Model.Tags"
                    asp-for="@Model.SelectedTag">
                <option selected disabled>Select a Tag</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="@Model.SelectedTags">Tags - Checkbox</label>
            @*Tag selection - Checkbox*@
            @foreach (var item in Model.Tags)
            {
                <div class="form-check mb-3">
                    <input class="form-check-input"
                           type="checkbox"
                           name="@Model.SelectedTags"
                           value="@item.Value"
                           @(Model.SelectedTags.Contains(item.Value) ? "checked" : "") />
                    <label class="form-check-abel mb-0 ms-1"
                           asp-for="@Model.SelectedTags">
                        @item.Text
                    </label>
                </div>
            }
        </div>

        <div class="mb-3">
            <button class="btn btn-dark" type="submit">Save</button>
            <a class="btn btn-secondary" asp-controller="AdminTags" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>




