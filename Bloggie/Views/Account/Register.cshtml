@model RegisterVM

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <h1 class="mt-3 mb-3 h3">Register a new account</h1>

            <form class="" method="post">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input 
                           asp-for="Username"
                           class="form-control" type="text" id="username"
                           placeholder="Username..." autofocus required 
                           />
                    <span class="text-danger" asp-validation-for="Username"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input 
                           asp-for="Email"
                           class="form-control" type="email" placeholder="example@email.com"
                           required 
                           />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input 
                           asp-for="Password" 
                           class="form-control" type="password" placeholder="password..." required
                           />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <div class="mb-3 d-flex justify-content-between">
                    <button class="btn btn-secondary btn-sign-in" type="submit">Sign Up</button>
                    <p class="mt-3">Already have an account? <a class="link-secondary" asp-controller="Account" asp-action="Login">Sign In</a></p>
                </div>
            </form>
        </div>
    </div>
</div>