@model LoginVM

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <h1 class="mt-3 mb-3 h3">Log in to your account</h1>

            <form class="" method="post">
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input class="form-control" type="text" id="username" placeholder="Username..." autofocus asp-for="Username" />
                </div>
        
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input class="form-control" type="password" id="password" placeholder="password..." asp-for="Password" />
                </div>
                <div class="mb-3 d-flex justify-content-between">
                    <button class="btn btn-secondary btn-sign-in"  type="submit">Sign In</button>
                    <p class="mt-3">Don't have an account? <a class="link-secondary" asp-controller="Account" asp-action="Register">Sign Up</a></p>
                </div>
            </form>
        </div>
    </div>
</div>
