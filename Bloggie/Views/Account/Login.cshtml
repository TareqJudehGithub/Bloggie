@model LoginVM

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <h1 class="mt-3 mb-3 h3">Log in to your account</h1>

            <form class="" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input 
                           asp-for="Username" 
                           class="form-control" type="text" id="username" placeholder="Username..." autofocus required
                           />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
        
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input 
                           asp-for="Password" 
                           class="form-control" type="password" id="password" placeholder="password..." 
                           />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3 d-flex justify-content-between">
                    <button class="btn btn-secondary btn-sign-in"  type="submit">Sign In</button>
                    <p class="mt-3">Don't have an account? <a class="link-secondary" asp-controller="Account" asp-action="Register">Sign Up</a></p>
                </div>
                <input type="hidden" asp-for="ReturnUrl" />
            </form>
        </div>
    </div>
</div>
